{
  "name": "nestjs-response-structure",
  "version": "1.1.2",
  "description": "Response structure for NestJS GraphQL",
  "author": "Tema Rusanov",
  "private": false,
  "main": "./dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/temarusanov/nestjs-response-structure"
  },
  "scripts": {
    "prepare": "tsc",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "eslint \"{lib,test}/**/*.ts\" --fix",
    "lint:ts": "eslint \"{lib,test}/**/*.ts\" --fix --plugin tsc --rule \"tsc/config: [2, {configFile: \"./tsconfig.json\"}]\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "lib",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@nestjs/common": "^7.6.18",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.18",
    "@nestjs/graphql": "^7.10.6",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/testing": "^7.6.18",
    "apollo-server-express": "^2.25.1",
    "graphql": "^15.6.0",
    "graphql-tools": "^7.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.1",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^15.12.2",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "apollo-server-env": "^3.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^4.3.8",
    "jest": "^27.4.5",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "replace-in-file": "^6.2.0",
    "rxjs": "^7.4.0",
    "semantic-release": "^18.0.0",
    "standard-version": "^9.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0"
  }
}
